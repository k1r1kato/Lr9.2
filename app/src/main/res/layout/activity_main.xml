<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/selectableTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectable_text"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:textIsSelectable="true"
        android:background="@color/card_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/linkTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/links_text"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:autoLink="web|email|phone"
        android:linksClickable="true"
        android:background="@color/card_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/spannableTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/spannable_text"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:background="@color/card_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/multilineTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/multiline_text"
        android:textSize="14sp"
        android:textColor="@color/primary_text"
        android:maxLines="3"
        android:ellipsize="end"
        android:background="@color/card_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_prefix"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:background="@color/card_background"
        android:padding="8dp"/>

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_button"
        android:layout_marginTop="16dp"
        app:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"/>

</LinearLayout>